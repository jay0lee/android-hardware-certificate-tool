<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EEEEEE"
                android:padding="16dp"
                android:text="Instructions..."
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Configuration" />

            <Spinner
                android:id="@+id/spinnerKeyType"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <EditText
                android:id="@+id/editSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Subject (CN=User)"
                android:text="CN=TestUser, O=MyCorp" />

            <RadioGroup
                android:id="@+id/radioFlowType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:checkedButton="@+id/radioManual"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioManual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Manual CSR" />

                <RadioButton
                    android:id="@+id/radioSelfSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Self-Signed (Test)" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/containerManual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnGenerateCsr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generate CSR" />

                <EditText
                    android:id="@+id/editCertInput"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:background="#F5F5F5"
                    android:gravity="top|start"
                    android:hint="Paste PEM Certificate here..."
                    android:padding="8dp"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnInstallManual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Install to Hardware" />
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/containerSelfSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnSelfSign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generate &amp; Install Self-Signed" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E0F7FA"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certificate Verification"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Confirm a certificate is installed and check its storage type."
            android:textSize="12sp"/>

        <Button
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Select &amp; Verify Certificate" />
            
        <TextView
            android:id="@+id/txtVerificationResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="" />
    </LinearLayout>
</LinearLayout>
