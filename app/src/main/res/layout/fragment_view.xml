<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_view"
        app:tint="@color/primary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Certificate Inspector"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Select an installed credential to inspect its security level (TEE vs StrongBox)."
        android:gravity="center"
        android:textColor="@color/on_surface"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Select Certificate" 
        app:cornerRadius="8dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/surface"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/grey_hint"
        app:cardCornerRadius="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtVerificationResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No certificate selected."
                android:fontFamily="monospace"
                android:textColor="@color/on_surface" 
                android:textSize="13sp" />
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
